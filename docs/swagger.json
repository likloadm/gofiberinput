{
    "swagger": "2.0",
    "info": {
        "description": "API for controlling the receipt and withdrawal of funds",
        "title": "Go Fiber Input",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:3080",
    "basePath": "/",
    "paths": {
        "/login": {
            "post": {
                "description": "login user by name and password",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "login user by name and password",
                "operationId": "Login",
                "parameters": [
                    {
                        "description": "User name",
                        "name": "name",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "description": "User password",
                        "name": "pass",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "access JWT token",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "400": {
                        "description": "Server error",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "401": {
                        "description": "Bearer auth required",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/register": {
            "post": {
                "description": "register user by name and password",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "register user by name and password",
                "operationId": "Register",
                "parameters": [
                    {
                        "description": "User name",
                        "name": "name",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "description": "User password",
                        "name": "pass",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "access JWT token",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "400": {
                        "description": "Server error",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "401": {
                        "description": "Bearer auth required",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/transaction": {
            "get": {
                "description": "get transaction by id",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "Get transaction by id",
                "operationId": "GetTransaction",
                "parameters": [
                    {
                        "description": "Transaction id",
                        "name": "id",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "ok",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "400": {
                        "description": "Server error",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "401": {
                        "description": "Bearer auth required",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            },
            "post": {
                "description": "get id by type transaction and amount \u003e 0",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "Add a new transaction to the database and change balance",
                "operationId": "transaction",
                "parameters": [
                    {
                        "description": "Transaction amount",
                        "name": "amount",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "number"
                        }
                    },
                    {
                        "description": "1 input, 2 output",
                        "name": "type",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "ok",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "400": {
                        "description": "Server error",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "401": {
                        "description": "Bearer auth required",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/user": {
            "get": {
                "description": "get user by jwt auth",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "get user by jwt auth",
                "operationId": "GetUser",
                "responses": {
                    "200": {
                        "description": "user",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "400": {
                        "description": "Server error",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "401": {
                        "description": "Bearer auth required",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    },
    "securityDefinitions": {
        "ApiKeyAuth": {
            "type": "apiKey",
            "name": "Bearer",
            "in": "header"
        },
        "BasicAuth": {
            "type": "basic"
        }
    }
}